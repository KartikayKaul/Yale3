{
    "manifest_version": 3,
    "name": "YalÂ§",
    "version": "2.2.2",
    "description": "Simple LinkedIn Profile scraping extension",
    "icons": {
        "128": "Y.png"
    },
    "permissions": [
        "scripting",
        "storage",
        "tabs",
        "identity",
        "downloads"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*"
    ],
    "background": {
        "service_worker": "scripts/events.js"
    },
    "action": {
        "default_title": "yale3"
    },
    "content_scripts": [
        {
            "matches": ["https://*.linkedin.com/*"],
            "css": ["css/content.css"],
            "js": [
                "scripts/selectors.js",   
                "scripts/content.js"
            ], 
            "type": "module"
        }
    ],
    "web_accessible_resources": [{
        "resources": ["scripts/modal_scraper.js","views/slider.html"],
        "matches": ["<all_urls>"]
    }],

    "homepage_url": "https://github.com/KartikayKaul/Yale3"
}